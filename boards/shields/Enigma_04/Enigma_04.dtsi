#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,studio-rpc = &studio_usb;
    };
  
    transform_kbd0: transform_kbd0 {
        compatible = "zmk,matrix-transform";
        columns = <10>;
        rows = <3>;               
        map = <
                    RC(0,1) RC(0,2) RC(0,3) RC(0,4)     RC(0,9) RC(0,8) RC(0,7) RC(0,6)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4)     RC(1,9) RC(1,8) RC(1,7) RC(1,6) RC(1,5)
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4)     RC(2,9) RC(2,8) RC(2,7) RC(2,6) RC(2,5)
        >;
    };

    transform_kbd1: transform_kbd1 {
        compatible = "zmk,matrix-transform";
        columns = <10>;
        rows = <4>;               
        map = <
                    RC(0,1) RC(0,2) RC(0,3) RC(0,4)       RC(0,9) RC(0,8) RC(0,7) RC(0,6)
            RC(3,0) RC(1,0) RC(1,2) RC(1,3) RC(1,4)       RC(1,9) RC(1,8) RC(1,7) RC(1,5) RC(3,5)
            RC(3,1) RC(2,0) RC(2,1) RC(2,3) RC(2,4)       RC(2,9) RC(2,8) RC(2,6) RC(2,5) RC(3,6)
        >;
    };

    kscan_kbd0: kscan_kbd0 {
        compatible = "zmk,kscan-gpio-matrix";
        diode-direction = "row2col";
            row-gpios
                = <&gpio1 15 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
                  <&gpio1 14 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
                  <&gpio1 13 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>;
    };

    kscan_kbd1: kscan_kbd1 {
        compatible = "zmk,kscan-gpio-charlieplex";
        interrupt-gpios = <&gpio1 11 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>;
    };

    transform_tbm0: transform_tbm0 {
        compatible = "zmk,matrix-transform";
        columns = <5>;
        rows = <4>;               
        map = <
                  RC(0,1) RC(0,2) RC(0,3) RC(0,4)
          RC(3,0) RC(1,0) RC(1,2) RC(1,3) RC(1,4)
          RC(3,1) RC(2,0) RC(2,1) RC(2,3) RC(2,4)
        >;
    };

    transform_tbm1: transform_tbm1 {
        compatible = "zmk,matrix-transform";
        columns = <5>;
        rows = <4>;               
        map = <
                  RC(0,1)                 RC(0,4)
          RC(3,0) RC(1,0)                 RC(1,4)
          RC(3,1) RC(2,0) RC(2,1) RC(2,3) RC(2,4)
        >;
    };

    transform_tbm2: transform_tbm2 {
        compatible = "zmk,matrix-transform";
        columns = <5>;
        rows = <4>;               
        map = <
            RC(0,4) RC(0,3) RC(0,2) RC(0,1)
            RC(1,4) RC(1,3) RC(1,2) RC(1,0) RC(3,0)
            RC(2,4) RC(2,3) RC(2,1) RC(2,0) RC(3,1)
        >;
    };

    transform_tbm3: transform_tbm3 {
        compatible = "zmk,matrix-transform";
        columns = <5>;
        rows = <4>;               
        map = <
            RC(0,4)                 RC(0,1)
            RC(1,4)                 RC(1,0) RC(3,0)
            RC(2,4) RC(2,3) RC(2,1) RC(2,0) RC(3,1)
        >;
    };

    kscan_tbm0: kscan_tbm0 {
        compatible = "zmk,kscan-gpio-charlieplex";
        interrupt-gpios = <&gpio (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>;
                gpios = <&gpio1 15 GPIO_ACTIVE_HIGH>,
                <&gpio1 12 GPIO_ACTIVE_HIGH>,
                <&gpio0 9 GPIO_ACTIVE_HIGH>,
                <&gpio0 10 GPIO_ACTIVE_HIGH>,
                <&gpio0 29 GPIO_ACTIVE_HIGH>;
    };

    studio_usb: studio_usb {
        compatible = "zmk,studio-rpc-usb-uart";
    };

    encoder_0: encoder_0 {
        compatible = "alps,ec11";
        a-gpios = <&gpio0 2 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        b-gpios = <&gpio0 3 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        steps = <24>;
        status = "disabled";
    };

    sensors_0: sensors_0 {
        compatible = "zmk,keymap-sensors";
        sensors = <&encoder_0>;
        triggers-per-rotation = <12>;
    };
};
